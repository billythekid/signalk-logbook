{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lille-oe.de/#log-entry",
  "title": "Logbook entry",
  "description": "Individual entry in a logbook",
  "type": "object",
  "required": ["datetime", "text"],
  "additionalProperties": false,
  "properties": {
    "datetime": {
      "type": "string",
      "format": "date-time"
    },
    "position": {
      "type": "object",
      "required": ["latitude", "longitude"],
      "additionalProperties": false,
      "properties": {
        "latitude": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        },
        "source": {
          "type": "string",
          "default": "GPS"
        }
      }
    },
    "heading": {
      "type": "number",
      "minimum": 0,
      "maximum": 360
    },
    "speed": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "stw": {
          "type": "number",
          "minimum": 0
        },
        "sog": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "log": {
      "type": "number",
      "minimum": 0
    },
    "waypoint": {
      "type": "object",
      "required": ["latitude", "longitude"],
      "additionalProperties": false,
      "properties": {
        "latitude": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        }
      }
    },
    "barometer": {
      "type": "number"
    },
    "wind": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "speed": {
          "type": "number",
          "minimum": 0
        },
        "direction": {
          "type": "number",
          "minimum": 0,
          "maximum": 360
        }
      }
    },
    "engine": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "hours": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "vhf": {
      "type": "string",
      "maxLength": 2,
      "minLength": 2
    },
    "end": {
      "type": "boolean",
      "default": false
    },
    "text": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": [
        "navigation",
        "engine",
        "radio",
        "maintenance"
      ]
    }
  }
}
